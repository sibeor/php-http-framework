{
    "name": "sibeor/php-http-framework",
    "type": "project",
    "minimum-stability": "dev",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Framework\\": "src/Framework/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\App\\": "tests/App/",
            "Test\\Framework\\": "tests/Framework/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "dev-master",
        "phpunit/phpunit": "9.5"
    },
    "scripts": {
        "php-cs-fixer": "php-cs-fixer --allow-risky=yes",
        "test": "phpunit --colors=always"
    }
}
